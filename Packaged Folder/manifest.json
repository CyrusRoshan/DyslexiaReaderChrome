{
  "manifest_version": 2,
  "name": "Dyslexia Reader Chrome",
  "description": "Dyslexia Reader as a Google Chrome extension.",
  "version": "1.0",

"icons": {
  "16": "images/icon16.png",
  "48": "images/icon48.png",
  "128": "images/icon128.png"
},

"browser_action": {
  "default_icon": "images/icon.png",
  "default_popup": "popup.html"
},

"content_scripts": [
  {
  "matches": ["<all_urls>"],
  "css": ["css/cssDefault.css", "css/cssChanged.css"],
  "js": ["js/cssChanger.js", "js/contentScript.js"],
  "run_at": "document_end",
  "all_frames": true
  }
],


"permissions": [
  "contextMenus",
  "tabs",
  "contextMenus"

]

}