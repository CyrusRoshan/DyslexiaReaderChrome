{
  "name": "Dyslexia Reader Chrome",
  "description": "Dyslexia Reader as a Google Chrome extension.",
  "version": "1.0",

  "background": {
    "scripts": ["js/inject.js", "js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "contextMenus",
    "storage",
    "webNavigation",
    "<all_urls>"

  ],


  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/inject.js"]
      }
    ],

  "manifest_version": 2
}