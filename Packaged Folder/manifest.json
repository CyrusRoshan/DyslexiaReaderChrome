{
  "name": "Dyslexia Reader Chrome",
  "description": "Dyslexia Reader as a Google Chrome extension.",
  "version": "1.0",

  "background": {
    "scripts": ["js/jquery-2.1.3.min.js", "js/dataStorage.js", "js/checkStatus.js", "js/changeStatus.js", "js/radioChecker.js", "js/urlChecker.js", "js/inject.js", "js/onload.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "contextMenus",
    "storage",
    "webNavigation",
    "<all_urls>"

  ],

  "web_accessible_resources": [
    "js/jquery-2.1.3.min.js"
  ],

  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/jquery-2.1.3.min.js"]
      }
    ],

  "manifest_version": 2
}